nav.pages(aria-label="...")
    ul.pagination
        - var sum = count
        - var start = 1
        - var end = 1
        if sum > 1
            if page > sum
                - page = sum
            - page = parseInt(page);
            if sum < 11
                - start = 1
                - end = sum+1
            else if (sum>10)&&(page<6)
                - start = 1
                - end = 11
            else if (page+4<sum) && (sum>10) && (page>5)
                - start = page-5
                - end = page+5
            else if (page+5>sum) && (sum>10) && (page>5)
                - start = sum-9
                - end = sum+1
            else
            - for (i = start;i<end;i++)
                if (page==start)&&(i==start)
                    li.disabled
                        a(href="#{path}1" aria-label="Previous")
                            span(aria-hidden="true") «
                else if i==start
                    li
                        a(href="#{path}1" aria-label="Previous")
                            span(aria-hidden="true") «
                else
                if i==page
                    li.active
                        a(href="#{path}#{i}") #{i}
                            span.sr-only (current)
                else
                    li
                        a(href="#{path}#{i}") #{i}
                if (page==(end-1))&&(i==(end-1))
                    li.disabled
                        a(href="#{path}#{sum}" aria-label="Next")
                            span(aria-hidden="true") »
                else if i == (end-1)
                    li
                        a(href="#{path}#{sum}" aria-label="Next")
                            span(aria-hidden="true") »